XSOCK=/tmp/.X11-unix
XAUTH=/tmp/.docker.xauth
xauth nlist :0 | sed -e 's/^..../ffff/' | xauth -f $XAUTH nmerge -
docker run -it -v $XSOCK:$XSOCK -v $XAUTH:$XAUTH -e XAUTHORITY=$XAUTH -v ${HOME}/.config/pharo:/home/pharo/.config/pharo:rw -v ${PWD}:/home/pharo/work --network=host acmsl-phusion/gradle-gtoolkit-texlive:latest
